    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
	<script src="/js/bootstrap-typeahead-rtl.js"></script>
	<script src="/js/jquery.ba-hashchange.min.js"></script>	

	<script>
		$(function() {

			function setHash(donorId){
				window.location.href = window.location.protocol + '//' + 
			    		window.location.host + window.location.pathname + '#' + donorId;
			}

			var data = <%= @donors %>;
			$('#donor-input').typeahead({
			    source: function(query, process) {
			        objects = [];
			        map = {};
			        $.each(data, function(i, object) {
			            map[object.label] = object.value;
			            objects.push(object.label);
			        });
			        process(objects);
			    },
			    updater: function(item) {
			    	$('#donor-id-input').val(map[item]);

			        return item;
			    }
			}); 		

			$('#search-form').submit(function(){
				setHash($(this).find('#donor-id-input').val());

				return false;
			});

			$(window).hashchange( function(){
				var donorId = window.location.hash.replace(/#/, '');
				if (donorId != parseInt(donorId)) return;

				$('#loader').show();
				$.get('/donor/' + donorId,
					function(data){
						$('#results').html(data);
					}
				).error(function(){
					alert('קרתה תאונה');
				}).done(function(){
					$('#loader').hide();
				});			    
			});

      if (window.location.hash.length > 1)
        $(window).hashchange();

			$('#donor-input').focus();
		});
	</script>

